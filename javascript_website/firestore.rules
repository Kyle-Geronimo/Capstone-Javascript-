rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isEmployee() {
      return isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'employee';
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // ðŸ”¹ Chatbot Inquiries
    match /chatbot/{docId} {
      // Any signed-in user (admin or employee) can read inquiries
      allow read: if isAdmin() || isEmployee();
      // Any signed-in user can create new chatbot inquiries
      allow create: if isSignedIn();
      // Only admins can edit or delete chatbot logs
      allow update, delete: if isAdmin();
    }

    // ðŸ”¹ Account Requests
    match /accountRequests/{requestId} {
      // Anyone can submit a signup request
      allow create: if true;
      // Only admins can view or manage requests
      allow read, update, delete: if isAdmin();
    }

    // ðŸ”¹ User Profiles
    match /users/{userId} {
      // All signed-in users can read basic profile info
      allow read: if isSignedIn();
      // Users can manage their own profile
      allow create, update: if request.auth.uid == userId;
      // Admins can manage all profiles
      allow write: if isAdmin();
    }

    // ðŸ”¹ Archived Users
    match /archivedUsers/{docId} {
      allow read, write: if isAdmin();
    }
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'employee' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }

    // Users collection
    match /users/{userId} {
      // Regular users can read their own data, admins can read any user
      allow get: if isAuthenticated() && (isOwner(userId) || isAdmin());
      // Only admins can list all users
      allow list: if isAdmin();
      
      // Users can update their own profile, admins can update anyone
      allow update: if isOwner(userId) || isAdmin();
      
      // Only admins can create or delete users
      allow create, delete: if isAdmin();
    }

    // ðŸ”¹ Attendance
    match /attendance/{docId} {
      allow read: if isSignedIn();
      // Employees can write their own attendance
      allow create, update: if request.auth.uid == resource.data.userId || isAdmin();
      allow delete: if isAdmin();
    }

    // ðŸ”¹ Hotels collection
    match /hotels/{hotelId} {
      // Any signed-in user can read hotel data
      allow read: if isSignedIn();
      // No one can write to hotels collection through the client
      allow write: if false;
    }

    // ðŸ”¹ Payroll
    match /payroll/{docId} {
      // Everyone can read their own payroll; admins can read all
      allow read: if isAdmin() || resource.data.employeeId == request.auth.uid;
      // Only admins can create/update payroll records
      allow create: if isAdmin() && 
        request.resource.data.keys().hasAll(['employeeId', 'amount', 'period', 'date']) &&
        request.resource.data.amount is number &&
        request.resource.data.amount >= 0;
      
      allow update: if isAdmin() &&
        request.resource.data.employeeId == resource.data.employeeId;
      
      allow delete: if isAdmin();
    }

    // ðŸ”¹ Payroll Batches
    match /payrollBatches/{batchId} {
      allow read: if isAdmin();
      
      allow create: if isAdmin() && 
        request.resource.data.keys().hasAll(['period', 'month', 'year', 'status']) &&
        request.resource.data.status in ['processing', 'completed', 'error'];
        
      allow update: if isAdmin() &&
        request.resource.data.keys().hasAll(['period', 'month', 'year', 'status']);
        
      allow delete: if isAdmin();
    }

    // Payroll collection
    match /payroll/{payrollId} {
      // Users can read only their own payroll records, admins can read all
      allow read: if isAuthenticated() && 
        (resource.data.userId == request.auth.uid || isAdmin());
      
      // Only admins can create/update/delete payroll records
      allow create: if isAdmin() && 
        request.resource.data.keys().hasAll(['userId', 'amount', 'period', 'date']) &&
        request.resource.data.amount is number &&
        request.resource.data.amount >= 0;
      
      allow update: if isAdmin() &&
        request.resource.data.userId == resource.data.userId;
      
      allow delete: if isAdmin();
    }

    // Payroll batches collection
    match /payrollBatches/{batchId} {
      // Only admins can read/write payroll batches
      allow read: if isAdmin();
      
      // Add specific validation for batch creation
      allow create: if isAdmin() && 
        request.resource.data.keys().hasAll(['period', 'month', 'year', 'status']) &&
        request.resource.data.status in ['processing', 'completed', 'error'];
        
      allow update: if isAdmin() &&
        request.resource.data.keys().hasAll(['period', 'month', 'year', 'status']);
        
      allow delete: if isAdmin();
    }

    // Attendance-Payroll Index collection (if needed for performance)
    match /attendancePayrollIndex/{indexId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    // Account requests collection
    match /accountRequests/{requestId} {
      // Allow anyone (authenticated or not) to create account requests
      // as long as the payload is valid
      allow create: if request.resource.data.status == 'pending' &&
        request.resource.data.email is string &&
        request.resource.data.email.matches('^[^@]+@[^@]+\\.[^@]+$');

      // Explicitly allow admins to read individual documents and list all requests
      allow get, list: if isAdmin();
      
      // Only admins can update and delete requests
      allow update, delete: if isAdmin();
    }

    // Chat collection (for the chatbot)
    match /chats/{chatId} {
      // Users can only read their own chats
      allow read: if isAuthenticated() && 
        (resource.data.userId == request.auth.uid || isAdmin());
      
      // Users can create their own chats
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid;
      
      // Users can update their own chats, admins can update any
      allow update: if isAuthenticated() && 
        (resource.data.userId == request.auth.uid || isAdmin());
      
      // Only admins can delete chats
      allow delete: if isAdmin();
    }

    // Employee schedules collection
    match /schedules/{scheduleId} {
      // Everyone can read schedules
      allow read: if isAuthenticated();
      
      // Only admins can create/update/delete schedules
      allow create, update, delete: if isAdmin();
    }

    // Profile data collection
    match /profiles/{userId} {
      // Users can read any profile
      allow read: if isAuthenticated();
      
      // Users can only update their own profile, admins can update any
      allow update: if isOwner(userId) || isAdmin();
      
      // Only admins can create/delete profiles
      allow create, delete: if isAdmin();
    }
  }
}