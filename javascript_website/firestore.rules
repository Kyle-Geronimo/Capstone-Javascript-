rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --------------------------------
    // Helper functions
    // --------------------------------
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn()
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isEmployee() {
      return isSignedIn()
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'employee';
    }

    // --------------------------------
    // Account Requests
    // --------------------------------
    match /accountRequests/{requestId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    // --------------------------------
    // Payroll View Requests
    // --------------------------------
    match /payrollViewRequests/{requestId} {
      // Any signed-in user (admin or employee) may create a payroll view request for themselves
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;

      // Admins may read/update/delete all requests
      // Non-admin users may read their own requests so the UI can check for pending/approved status
      allow read: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);

      // Only admins can update requests (approve/deny)
      allow update: if isAdmin();

      // Request owners may delete their own pending request (withdraw)
      // Admins can also delete any request if needed
      allow delete: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
    }

    // --------------------------------
    // Users
    // --------------------------------
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update, delete: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow write: if isAdmin();
    }

    // --------------------------------
    // Archived Users
    // --------------------------------
    match /archivedUsers/{docId} {
      allow read, write: if isAdmin();
    }

    // --------------------------------
    // Attendance
    // --------------------------------
    match /attendance/{docId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && (
        request.auth.uid == request.resource.data.userId || isAdmin()
      );
      allow update: if isSignedIn() && (
        request.auth.uid == resource.data.userId || isAdmin()
      );
      allow delete: if isAdmin();
    }

    // --------------------------------
    // Payroll Runs
    // --------------------------------
    match /payrolls/{payrollId} {
      // Only admins can create/update/delete payroll runs
      allow create, update, delete: if isAdmin();

      // Any signed-in user (admin or employee) may read payroll runs.
      // This is required for fetchMostRecentPayrollRun() which queries the
      // payrolls collection when an employee's request is approved.
      allow read: if isSignedIn();

      match /lines/{lineId} {
        // Any signed-in user may read payroll lines (used to display their
        // own saved payroll data on the profile page). Writes remain admin-only.
        allow read: if isSignedIn();
        allow create, update, delete: if isAdmin();
      }
    }

    // --------------------------------
    // Payroll Batches
    // --------------------------------
    match /payrollBatches/{batchId} {
      allow read, write, delete: if isAdmin();
    }

    // --------------------------------
    // Chatbot Inquiries
    // --------------------------------
    match /chatbot/{docId} {
      allow create: if isSignedIn();
      allow read: if isAdmin() || isEmployee();
      allow update, delete: if isAdmin();
      allow write: if true;
    }
		
    // --------------------------------
    // Hotels
    // --------------------------------
    match /hotel/{docId} {
      allow read: if true;
      allow write: if isAdmin() || isEmployee();
    }
    
    
    // --------------------------------
    // SSS Contribution Table (NEW)
    // --------------------------------
    match /config/sssContributionTable {
      // Anyone signed-in can read the current SSS table
      allow read: if isSignedIn();

      // Only admins can modify the table
      allow write: if isAdmin();
    }

    // SSS Contribution Table History (admin-only read, no writes)
    match /config/sssContributionTable/history/{docId} {
      allow read: if isAdmin();
      allow write: if false; // only backend server/batch writes
    }

    // --------------------------------
    // Guest Reservations (Chatbot dashboard)
    // --------------------------------
    match /guestReservations/{reservationId} {
      // Admins and employees can read and manage reservations
      allow read, create, update, delete: if isAdmin() || isEmployee();
    }

    // --------------------------------
    // Default deny everything else
    // --------------------------------
    match /{document=**} {
      allow read, write: if false;
    }
  }
}